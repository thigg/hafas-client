{
    "compilerOptions": {
        "skipLibCheck": true,
        "outDir": "build",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowJs": true,
        "strictNullChecks": false,
        "allowSyntheticDefaultImports": true,
        "target": "ES6",
        "module": "esnext",
        "declaration": true,
        "noEmit": true,
        "checkJs": true
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "build",
        "@types",
        "test",
        "p/**/example.js",
        "tools",
        "throttle.js",
        "retry.js"
    ]
}